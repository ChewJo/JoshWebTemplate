@using JoshWebTemplate.Core.Models.Account

@inject NavigationManager NavigationManager

<MudCard Class="pa-4 cursor-pointer hover-elevation"
         Style="transition: box-shadow 0.3s ease;"
         @onclick="NavigateToProfile">
    <MudCardContent Class="pa-0">
        <div class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" />
            <div>
                <MudText Typo="Typo.h6">@user.Firstname @user.Lastname</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">@user.OfficeLocation.Value</MudText>
            </div>
        </div>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public UserModel user { get; set; } = default!;

    private void NavigateToProfile()
    {
        NavigationManager.NavigateTo($"/profile/{user.ProfileId}");
    }
}

@page "/manage"
@using Microsoft.AspNetCore.Authorization
@using MySmartShiftNoAI.Services
@using MySmartShiftNoAI.Services.Interfaces
@using MySmartShiftNoAI.Models
@attribute [Authorize]
@inject IAuthService AuthService
@inject IUserService UserService

<PageTitle>Account Management</PageTitle>

<div class="container mt-4">
    @if (_user != null)
    {
        <div class="card">
            <div class="card-header">
                <h3>Account Information</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Name:</strong>
                    </div>
                    <div class="col-md-9">
                        @_user.FirstName @_user.LastName
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-md-9">
                        @_user.Email
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Role:</strong>
                    </div>
                    <div class="col-md-9">
                        @_user.Role
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-danger" @onclick="LogoutAsync">Logout</button>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationUser? _user;

    protected override async Task OnInitializedAsync()
    {
        _user = await UserService.GetUser();
    }

    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
    }
}
